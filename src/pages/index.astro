---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all content
const allNotes = await getCollection('notes');
const allTilPosts = await getCollection('til');

// Calculate statistics
const publishedNotes = allNotes.filter(note => note.data.published);
const publishedTilPosts = allTilPosts.filter(post => post.data.published);
const totalNotes = publishedNotes.length;
const totalTilPosts = publishedTilPosts.length;

// Get unique categories
const noteCategories = [...new Set(publishedNotes.map(note => note.data.category))];
const tilCategories = [...new Set(publishedTilPosts.map(post => post.data.category))];
const allCategories = [...new Set([...noteCategories, ...tilCategories])];

// Get featured notes
const featuredNotes = publishedNotes.filter(note => note.data.featured).slice(0, 4);
---

<Layout title="DevNotes - Your Public Knowledge Garden">
  <div class="px-4 py-8 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
        ðŸ“š Welcome to DevNotes
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto">
        Your personal digital garden of technical knowledge. Explore algorithms, system design, 
        Python tricks, and everything in between.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/notes" class="btn-primary">
          Browse All Notes
        </a>
        <a href="/til" class="btn-secondary">
          Today I Learned
        </a>
      </div>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
      <div class="card p-6 text-center">
        <div class="text-3xl font-bold text-primary-600 mb-2">{totalNotes}</div>
        <div class="text-gray-600 dark:text-gray-400">Total Notes</div>
      </div>
      <div class="card p-6 text-center">
        <div class="text-3xl font-bold text-primary-600 mb-2">{allCategories.length}</div>
        <div class="text-gray-600 dark:text-gray-400">Categories</div>
      </div>
      <div class="card p-6 text-center">
        <div class="text-3xl font-bold text-primary-600 mb-2">{totalTilPosts}</div>
        <div class="text-gray-600 dark:text-gray-400">TIL Posts</div>
      </div>
    </div>

    <!-- Available Notes -->
    <div class="mb-12">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
        Featured Notes
      </h2>
      {featuredNotes.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {featuredNotes.map(note => (
            <a href={`/notes/${note.slug}`} class="card p-6 hover:shadow-lg transition-shadow duration-200">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                {note.data.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">
                {note.data.description}
              </p>
              <div class="flex flex-wrap gap-2 mt-3">
                {note.data.tags.slice(0, 3).map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {publishedNotes.slice(0, 4).map(note => (
            <a href={`/notes/${note.slug}`} class="card p-6 hover:shadow-lg transition-shadow duration-200">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                {note.data.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm">
                {note.data.description}
              </p>
              <div class="flex flex-wrap gap-2 mt-3">
                {note.data.tags.slice(0, 3).map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </a>
          ))}
        </div>
      )}
    </div>

    <!-- Call to Action -->
    <div class="text-center bg-gradient-to-r from-primary-50 to-blue-50 dark:from-dark-800 dark:to-dark-700 rounded-2xl p-8">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
        Start Building Your Knowledge Garden
      </h2>
      <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-2xl mx-auto">
        Create your own notes, share your learnings, and build a portfolio that showcases 
        your technical expertise and continuous learning journey.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/notes" class="btn-primary">
          Explore Notes
        </a>
        <a href="/til" class="btn-secondary">
          Today I Learned
        </a>
      </div>
    </div>
  </div>
</Layout>
